<%= form_with(model: child, local: true) do |form| %>
  <% if child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
      <% child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :child_name %>
    
  </div>

  <div class="field">
    <%= form.label :sex %>
    <%#= form.text_field :sex, id: :child_sex %>
    <%= form.select(:sex, 
              options_for_select([["Masculino", "M"], ["Feminino", "F"]], @child.sex), 
              {include_blank: "Selecione"}) 
    %>
  </div>

  <div class="field">
    <%= form.label :father_id %>
    <%#= form.text_field :father_id, id: :child_father_id %>
    <%= form.collection_select(:father_id, @fathers, :id, :name, include_blank: true) %>
    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
